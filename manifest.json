{
  "manifest_version": 3,
  "name": "Sapio",
  "version": "0.0.8",
  "description": "Sapio - a smarter way to use LLMs with gpt-4o-mini as default model",
  "icons": {
    "16": "assets/favicon-16x16.png",
    "32": "assets/favicon-32x32.png",
    "128": "assets/favicon-128x128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  }
}